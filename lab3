import java.util.ArrayList;
import java.util.List;

/**
 * Абстрактный класс для всех видов хот-догов
 * Содержит общую логику для всех хот-догов
 */
public abstract class HotDog {
    protected String name;
    protected List<String> components;
    protected List<Double> prices;

    /**
     * Конструктор абстрактного класса HotDog
     * @param name название хот-дога
     */
    public HotDog(String name) {
        this.name = name;
        this.components = new ArrayList<>();
        this.prices = new ArrayList<>();
    }

    /**
     * Абстрактный метод для инициализации компонентов
     * Каждый конкретный хот-дог должен реализовать этот метод
     */
    protected abstract void initializeComponents();

    /**
     * Получить общую стоимость хот-дога
     * @return общая стоимость
     */
    public double getTotalPrice() {
        double total = 0;
        for (double price : prices) {
            total += price;
        }
        return total;
    }

    /**
     * Получить название хот-дога
     * @return название
     */
    public String getName() {
        return name;
    }

    /**
     * Получить список компонентов
     * @return список компонентов
     */
    public List<String> getComponents() {
        return new ArrayList<>(components); // Возвращаем копию для безопасности
    }

    /**
     * Получить список цен компонентов
     * @return список цен
     */
    public List<Double> getPrices() {
        return new ArrayList<>(prices); // Возвращаем копию для безопасности
    }

    /**
     * Добавить компонент к хот-догу
     * @param component название компонента
     * @param price цена компонента
     */
    protected void addComponent(String component, double price) {
        components.add(component);
        prices.add(price);
    }

    @Override
    public String toString() {
        return name + " - " + getTotalPrice() + " руб.";
    }

    /**
     * Вывести подробную информацию о хот-доге
     */
    public void printDetails() {
        System.out.println("Хот-дог: " + name);
        System.out.println("Компоненты:");
        for (int i = 0; i < components.size(); i++) {
            System.out.println("  - " + components.get(i) + " (" + prices.get(i) + " руб.)");
        }
        System.out.println("Итого: " + getTotalPrice() + " руб.");
        System.out.println("---");
    }
}
