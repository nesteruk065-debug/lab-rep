/**
 * Класс хот-дога "HunterDog"
 * Наследует абстрактный класс HotDog
 */
public class HunterDog extends HotDog {

    /**
     * Конструктор хот-дога HunterDog
     */
    public HunterDog() {
        super("HunterDog");
        initializeComponents();
    }

    /**
     * Инициализация компонентов для HunterDog
     */
    @Override
    protected void initializeComponents() {
        // Стандартные компоненты
        addComponent("Булочка", 20.0);
        addComponent("Сосиска", 30.0);
        addComponent("Соус", 10.0);
    }
}
import java.util.ArrayList;
import java.util.List;

/**
 * Главный класс программы
 * Содержит всю логику учета покупок
 */
public class Main {

    public static void main(String[] args) {
        System.out.println("=== ПРОГРАММА УЧЁТА ПОКУПОК ХОТ-ДОГОВ ===\n");

        // 1.3 Продать каждый вид хот-дога
        System.out.println("1. ПРОДАЕМ КАЖДЫЙ ВИД ХОТ-ДОГА:");

        // Создаем хот-доги (используем полиморфизм)
        HotDog hunterDog = new HunterDog();
        HotDog masterDog = new MasterDog();
        HotDog berlinka = new Berlinka();

        System.out.println("   - Создан: " + hunterDog);
        System.out.println("   - Создан: " + masterDog);
        System.out.println("   - Создан: " + berlinka);

        // Показываем подробности каждого хот-дога
        System.out.println("\nПодробности хот-догов:");
        hunterDog.printDetails();
        masterDog.printDetails();
        berlinka.printDetails();

        // 1.2 Продать отдельные компоненты
        System.out.println("2. ПРОДАЁМ ОТДЕЛЬНЫЕ КОМПОНЕНТЫ:");

        // Список для хранения отдельных компонентов
        List<String> individualComponents = new ArrayList<>();
        List<Double> individualPrices = new ArrayList<>();

        // Добавляем отдельные компоненты
        individualComponents.add("Булочка");
        individualPrices.add(20.0);

        individualComponents.add("Сосиска");
        individualPrices.add(30.0);

        individualComponents.add("Соус");
        individualPrices.add(10.0);

        individualComponents.add("Сыр");
        individualPrices.add(15.0);

        // Выводим отдельные компоненты
        for (int i = 0; i < individualComponents.size(); i++) {
            System.out.println("   - " + individualComponents.get(i) +
                    " (" + individualPrices.get(i) + " руб.)");
        }

        // 1.4 Подсчитать общую сумму всех заказов
        System.out.println("\n3. ПОДСЧЁТ ОБЩЕЙ СУММЫ:");

        // Создаем список всех хот-догов для подсчета
        List<HotDog> allHotDogs = new ArrayList<>();
        allHotDogs.add(hunterDog);
        allHotDogs.add(masterDog);
        allHotDogs.add(berlinka);

        // Добавляем еще несколько хот-догов для примера
        allHotDogs.add(new HunterDog());
        allHotDogs.add(new MasterDog());

        // Подсчет общей суммы хот-догов
        double totalHotDogsPrice = 0;
        for (HotDog dog : allHotDogs) {
            totalHotDogsPrice += dog.getTotalPrice();
        }

        // Подсчет общей суммы отдельных компонентов
        double totalComponentsPrice = 0;
        for (double price : individualPrices) {
            totalComponentsPrice += price;
        }

        // Общая сумма
        double totalSum = totalHotDogsPrice + totalComponentsPrice;
        System.out.println("   - Сумма всех хот-догов: " + totalHotDogsPrice + " руб.");
        System.out.println("   - Сумма отдельных компонентов: " + totalComponentsPrice + " руб.");
        System.out.println("   - ОБЩАЯ СУММА: " + totalSum + " руб.");

        // 1.5 Подсчитать количество полных заказов
        System.out.println("\n4. КОЛИЧЕСТВО ПОЛНЫХ ЗАКАЗОВ:");
        int fullOrdersCount = allHotDogs.size();
        System.out.println("   - Полных заказов (хот-догов): " + fullOrdersCount + " шт.");

        // 1.6 Подсчитать среднюю стоимость заказов
        System.out.println("\n5. СРЕДНЯЯ СТОИМОСТЬ ЗАКАЗОВ:");
        int totalItems = allHotDogs.size() + individualComponents.size();
        if (totalItems > 0) {
            double averagePrice = totalSum / totalItems;
            System.out.println("   - Всего позиций: " + totalItems + " шт.");
            System.out.println("   - СРЕДНЯЯ СТОИМОСТЬ: " +
                    String.format("%.2f", averagePrice) + " руб.");
        } else {
            System.out.println("   - Нет заказов для подсчета средней стоимости");
        }

        // Демонстрация полиморфизма
        System.out.println("\n6. ДЕМОНСТРАЦИЯ ПОЛИМОРФИЗМА:");
        System.out.println("   Тип hunterDog: " + hunterDog.getClass().getSimpleName());
        System.out.println("   Тип masterDog: " + masterDog.getClass().getSimpleName());
        System.out.println("   Тип berlinka: " + berlinka.getClass().getSimpleName());

        // Вызов методов через абстрактный тип HotDog
        System.out.println("   hunterDog.getTotalPrice() = " + hunterDog.getTotalPrice() + " руб.");
        System.out.println("   masterDog.getTotalPrice() = " + masterDog.getTotalPrice() + " руб.");
        System.out.println("   berlinka.getTotalPrice() = " + berlinka.getTotalPrice() + " руб.");

        System.out.println("\n=== ПРОГРАММА ЗАВЕРШЕНА ===");
    }
}
/**
 * Класс хот-дога "MasterDog"
 * Наследует абстрактный класс HotDog
 */
public class MasterDog extends HotDog {

    /**
     * Конструктор хот-дога MasterDog
     */
    public MasterDog() {
        super("MasterDog");
        initializeComponents();
    }

    /**
     * Инициализация компонентов для MasterDog
     */
    @Override
    protected void initializeComponents() {
        // Стандартные компоненты (две сосиски)
        addComponent("Булочка", 20.0);
        addComponent("Сосиска", 30.0);
        addComponent("Сосиска", 30.0);  // Вторая сосиска
        addComponent("Соус", 10.0);
    }
}

/**
 * Класс хот-дога "Berlinka"
 * Наследует абстрактный класс HotDog
 */
public class Berlinka extends HotDog {

    /**
     * Конструктор хот-дога Berlinka
     */
    public Berlinka() {
        super("Berlinka");
        initializeComponents();
    }

    /**
     * Инициализация компонентов для Berlinka
     */
    @Override
    protected void initializeComponents() {
        // Стандартные компоненты (двойной соус)
        addComponent("Булочка", 20.0);
        addComponent("Сосиска", 30.0);
        addComponent("Соус", 10.0);
        addComponent("Соус", 10.0);  // Двойной соус
    }
}
